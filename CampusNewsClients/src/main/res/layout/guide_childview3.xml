<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view1layout"
    android:background="@drawable/login3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/guide_re_layout"
            android:layout_width="match_parent"
            android:layout_height="55dip">
            <Button
                android:id="@+id/guide_register_btn"
                android:background="@drawable/login3_registerbtn"
                android:layout_width="140dip"
                android:layout_height="141sp"
                android:layout_marginLeft="30dip"/>
            <Button
                android:background="@drawable/login3_loginbtn"
                android:id="@+id/guide_login_btn"
                android:layout_width="180dip"
                android:layout_height="141sp"
                android:layout_toRightOf="@id/guide_register_btn"
                android:layout_marginLeft="16dip"/>


        </RelativeLayout>

        <Button

            android:id="@+id/guide_visitor_btn"
            android:layout_below="@id/guide_re_layout"
            android:layout_marginLeft="116dip"
            android:layout_width="141sp"
            android:layout_height="wrap_content"
            android:background="@drawable/login3_visitorbtn"/>
    </RelativeLayout>


</LinearLayout>
